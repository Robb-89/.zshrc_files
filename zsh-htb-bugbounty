# --- Quality-of-life -----------------------------------------------------------
watchfile() { # watchfile <path>
  local f="$1"; [[ -f $f ]] || { echo "Usage: watchfile <file>"; return 1; }
  while true; do clear; date; tail -n 40 "$f"; sleep 1; done
}


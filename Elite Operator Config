# --- System Status Function ---
function system_status() {
    echo -e "\033[1;36mâš¡ SYSTEM STATUS:\033[0m"
    echo -e "  ðŸ”‹ Battery: $(cat /sys/class/power_supply/BAT*/capacity 2>/dev/null || echo 'N/A')%"
    echo -e "  ðŸ’¾ Memory: $(free -h | awk 'NR==2{printf "%.1f%% (%.1fG/%.1fG)", $3*100/$2, $3/1024/1024, $2/1024/1024}')"
    echo -e "  ðŸ’¿ Disk: $(df -h / | awk 'NR==2{printf "%s (%s used)", $4, $5}')"
    echo -e "  ðŸŒ¡ï¸ CPU Load: $(uptime | awk -F'load average:' '{print $2}' | sed 's/^[ \t]*//')"
    echo ""
}

# --- IP Grabber Function ---
function grab_ip() {
    local ip_addr
    ip_addr=$(ip route get 1 2>/dev/null | awk '{print $7}' | head -n1)
    [[ -z $ip_addr ]] && ip_addr="127.0.0.1"
    echo $ip_addr
}

export MYIP=$(grab_ip)

